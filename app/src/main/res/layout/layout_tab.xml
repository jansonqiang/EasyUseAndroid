<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tab_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/tab_icon_explore"
        android:text="综合"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/viewpage_selector_slide_title"
        android:layout_centerInParent="true"
        />





    <TextView
        android:id="@+id/tab_mes"
        android:layout_alignRight="@id/tab_tx"
        android:layout_alignTop="@id/tab_tx"
        android:layout_marginLeft="1dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        />

</RelativeLayout>